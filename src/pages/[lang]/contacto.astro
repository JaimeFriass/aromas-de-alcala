---
import { getEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";

export async function getStaticPaths() {
    return [{ params: { lang: "en" } }];
}

const { lang } = Astro.params;
const entry = await getEntry("contact", lang === "en" ? "en" : "es");

if (!entry) {
    throw new Error(`Could not find content for contact/${lang}`);
}

const { data } = entry;
---

<Layout title={`${data.title} - Aromas de Alcalá`}>
    <Header />
    <main class="min-h-screen bg-white">
        <!-- Hero Section -->
        <div
            class="relative h-[50vh] min-h-[400px] flex items-center justify-center overflow-hidden"
        >
            <div class="absolute inset-0 z-0">
                <img
                    src="/images/contact-cover.jpg"
                    alt="Salón Aromas de Alcalá"
                    class="w-full h-full object-cover"
                />
                <div
                    class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/40 to-transparent"
                >
                </div>
            </div>
            <div class="relative z-10 text-center text-white px-6">
                <h1
                    class="text-5xl md:text-7xl font-black mb-6 tracking-tight drop-shadow-xl"
                >
                    {data.title}
                </h1>
                <p
                    class="text-xl md:text-2xl font-light opacity-90 max-w-2xl mx-auto leading-relaxed drop-shadow-md"
                >
                    {data.subtitle}
                </p>
            </div>
        </div>

        <!-- Contact Content -->
        <div class="max-w-4xl mx-auto px-6 py-24 relative z-20 -mt-32">
            <div
                class="bg-white rounded-3xl p-10 md:p-16 shadow-2xl shadow-stone-200/50 border border-stone-100/50 text-center"
            >
                <div class="mb-12">
                    <h2
                        class="text-xs font-bold text-accent uppercase tracking-[0.2em] mb-4"
                    >
                        {data.whatsapp_cta}
                    </h2>
                    <p
                        class="text-3xl md:text-4xl font-bold text-stone-800 font-sans mb-6"
                    >
                        {data.phone_1}
                    </p>
                    <p
                        class="text-stone-500 font-light text-lg max-w-lg mx-auto leading-relaxed"
                    >
                        {data.address}
                    </p>
                </div>

                <div
                    class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-10 text-left"
                >
                    <!-- Phone 1 -->
                    <a
                        href={`tel:${data.phone_1.replace(/\s+/g, "")}`}
                        class="group flex items-center p-5 rounded-2xl bg-stone-50 border border-stone-100 hover:border-accent/30 hover:bg-white hover:shadow-lg transition-all duration-300"
                    >
                        <div
                            class="w-12 h-12 bg-white rounded-full flex items-center justify-center text-stone-400 group-hover:text-accent shadow-sm border border-stone-100 transition-colors"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="w-5 h-5"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="1.5"
                                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                                ></path></svg
                            >
                        </div>
                        <div class="ml-4">
                            <span
                                class="block text-xs font-bold text-accent uppercase tracking-wider mb-1"
                                >{data.phone_1_label}</span
                            >
                            <span
                                class="block text-stone-800 font-bold text-lg group-hover:text-accent transition-colors"
                                >{data.phone_1}</span
                            >
                        </div>
                    </a>

                    <!-- Phone 2 -->
                    <a
                        href={`tel:${data.phone_2.replace(/\s+/g, "")}`}
                        class="group flex items-center p-5 rounded-2xl bg-stone-50 border border-stone-100 hover:border-accent/30 hover:bg-white hover:shadow-lg transition-all duration-300"
                    >
                        <div
                            class="w-12 h-12 bg-white rounded-full flex items-center justify-center text-stone-400 group-hover:text-stone-800 shadow-sm border border-stone-100 transition-colors"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="w-5 h-5"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="1.5"
                                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                                ></path></svg
                            >
                        </div>
                        <div class="ml-4">
                            <span
                                class="block text-xs font-bold text-stone-500 uppercase tracking-wider mb-1"
                                >{data.phone_2_label}</span
                            >
                            <span
                                class="block text-stone-800 font-bold text-lg group-hover:text-stone-900 transition-colors"
                                >{data.phone_2}</span
                            >
                        </div>
                    </a>
                </div>

                <!-- Primary Action: WhatsApp -->
                <div class="mb-12">
                    <a
                        href="https://wa.me/34690831338"
                        target="_blank"
                        class="inline-flex items-center justify-center px-8 py-4 bg-[#25D366] text-white rounded-full font-bold shadow-lg shadow-green-200 hover:shadow-xl hover:bg-[#20bd5a] hover:-translate-y-1 transition-all duration-300 group"
                    >
                        <svg
                            class="w-6 h-6 fill-current mr-3 animate-pulse"
                            viewBox="0 0 24 24"
                            xmlns="http://www.w3.org/2000/svg"
                            ><path
                                d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"
                            ></path></svg
                        >
                        {data.whatsapp_cta}
                    </a>
                </div>

                <!-- Footer-like Links (Email & Socials) -->
                <div
                    class="border-t border-stone-100 pt-10 flex flex-col md:flex-row items-center justify-between gap-6"
                >
                    <a
                        href={`mailto:${data.email}`}
                        class="flex items-center text-stone-500 hover:text-accent transition-colors"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="w-5 h-5 mr-3"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="1.5"
                                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                            ></path></svg
                        >
                        {data.email}
                    </a>

                    <div class="flex space-x-6">
                        <a
                            href="https://instagram.com/aromasdealcala"
                            target="_blank"
                            class="text-stone-400 hover:text-[#E1306C] transition-colors bg-stone-50 p-3 rounded-full hover:bg-white hover:shadow-md"
                        >
                            <span class="sr-only">{data.social_cta}</span>
                            <svg
                                class="w-5 h-5 fill-current"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                                ><path
                                    d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                                ></path></svg
                            >
                        </a>
                        <a
                            href="https://facebook.com/aromasdealcala"
                            target="_blank"
                            class="text-stone-400 hover:text-[#1877F2] transition-colors bg-stone-50 p-3 rounded-full hover:bg-white hover:shadow-md"
                        >
                            <span class="sr-only">Facebook</span>
                            <svg
                                class="w-5 h-5 fill-current"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                                ><path
                                    d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"
                                ></path></svg
                            >
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <Footer />
</Layout>
